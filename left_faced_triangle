def left_faced_triangle(num):
	pat = input("enter a pattern :  ")
	for i in range(1, num+1):
		for r in range(1, num+1):
			if r <= (num - i):
				print(' ', end='')
			else:
				y= print(pat, end='')
		print()
	for j in range(num, 0, -1):
		print( (num -j) * ' ' + pat * (j))
left_faced_triangle(int(input("enter the number  " )))
